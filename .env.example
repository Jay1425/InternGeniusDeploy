# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=interngenius-super-secret-key-change-in-production

# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017/interngenius
# For MongoDB Atlas (Cloud):
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/interngenius?retryWrites=true&w=majority

# Security Settings
BCRYPT_LOG_ROUNDS=12
SESSION_COOKIE_SECURE=False  # Set to True in production with HTTPS
SESSION_COOKIE_HTTPONLY=True
PERMANENT_SESSION_LIFETIME=3600  # 1 hour in seconds

# Email Configuration (Optional - for password reset)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Machine Learning Settings
ML_MODEL_PATH=ml_module/models/
ENABLE_ML_PREDICTIONS=True
DROPOUT_PREDICTION_THRESHOLD=0.7

# Application Settings
DEBUG_MODE=True
MAX_CONTENT_LENGTH=16777216  # 16MB file upload limit
UPLOAD_FOLDER=static/uploads
ALLOWED_EXTENSIONS=pdf,doc,docx,jpg,jpeg,png

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Rate Limiting (Optional)
RATELIMIT_STORAGE_URL=redis://localhost:6379
RATELIMIT_DEFAULT=100 per hour

# Third-party API Keys (if needed)
LINKEDIN_API_KEY=your-linkedin-api-key
GITHUB_API_TOKEN=your-github-token
